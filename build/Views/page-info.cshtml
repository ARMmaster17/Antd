@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section MainContent
{
    <div class="grid">
        <div class="row">
            <div class="span12">
                <a href="/procs" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-info-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Procs</span>
                    </div>
                </a>

                <a href="/network" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-info-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Network</span>
                    </div>
                </a>

                <a href="/meminfo" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-info-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Meminfo</span>
                    </div>
                </a>

                <a href="/cpuinfo" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-info-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Cpuinfo</span>
                    </div>
                </a>

                <a href="/version" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-info-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Version</span>
                    </div>
                </a>

                <a href="/dmidecode" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-info-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">DmiDecode</span>
                    </div>
                </a>

                <a href="/ifconfig" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-info-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Ifconfig</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="span12">
                <ul id="info"></ul>
                <script type="text/javascript">
                    $(document).ready(function () {
                        jQuery.support.cors = true;
                        $.ajax({
                            url: '/dmidecode/uuid/',
                            type: 'GET',
                            dataType: 'json',
                            contentType: 'application/json;charset=utf-8',
                            success: function (data) {
                                $('#info').append('<li>UUID: ' + data + '</li>');
                                return false;
                            }
                        });
                        return false;
                    });

                    $(document).ready(function () {
                        jQuery.support.cors = true;
                        $.ajax({
                            url: '/ifconfig/ether/',
                            type: 'GET',
                            dataType: 'json',
                            contentType: 'application/json;charset=utf-8',
                            success: function (data) {
                                $('#info').append('<li>Address: ' + data + '</li>');
                                return false;
                            }
                        });
                        return false;
                    });
                </script>
            </div>
        </div>
    </div>
}
<legend id="UserManagement">Manage</legend>
<legend>User Management</legend>
<div class="tab-control" data-role="tab-control">
    <ul class="tabs">
        <li class="active"><a href="#_users_">Users</a></li>
        <li><a href="#_acdir_">Active Directory</a></li>
        <li><a href="#_wbauth_">Webmail Authentication</a></li>
    </ul>

    <div class="frames">
        <div class="frame" id="_users_">
            <form id="Users" action="~/" method="POST" enctype="multipart/form-data">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Home Directory</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>No user yet</td>
                            <td>&nbsp</td>
                        </tr>
                    </tbody>
                </table>
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="New User" />
            </form>
        </div>

        <div class="frame" id="_acdir_">
            <form id="AcDir" action="~/" method="POST" enctype="multipart/form-data">
                <div class="tile double">information ()</div>
                <div class="tile double">success ()</div>
                <br />
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>Active Directory</th>
                            <th>&nbsp</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Indirizzo IP PDC</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Nome Utente ADS</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Password ADS</td>
                            <td>
                                <input type="text" /><a href="#" class="button fg-black">Disable</a></td>
                        </tr>
                    </tbody>
                </table>
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Save" />
            </form>
        </div>

        <div class="frame" id="_wbauth_">
            <form id="WbDir" action="~/" method="POST" enctype="multipart/form-data">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>Webmail Authentication</th>
                            <th>&nbsp</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Default email domain</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Authentication Type</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Webmail Admin</td>
                            <td>
                                <input type="text" /><a href="#" class="button fg-black">Disable</a></td>
                        </tr>
                    </tbody>
                </table>
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>

@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using System.Collections.Generic
@{Layout = "_layout.cshtml";}

@section PageBar
{
    <nav class="navigation-bar bg-transparent page-bar menu-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase bold no-overlay fg-black upcase" style="line-height: 0px; margin-left: 20px !important;">Storage Management </div>

            <a href="#anchorVol" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-box on-left" style="line-height: 0px;"></i>Volumes
            </a>
            <a href="#anchorDsk" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-radio-checked on-left" style="line-height: 0px;"></i>Disks
            </a>
            <a href="#anchorArh" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-drawer on-left" style="line-height: 0px;"></i>Archives
            </a>
            <a href="#anchorPerc" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-pie on-left" style="line-height: 0px;"></i>Percentage
            </a>
        </nav>
    </nav>
}

@section MainContent
{
    <legend id="anchorDsk">Disks</legend>
    <div class="grid">
        <div class="row">
            <div class="span6">
                <table class="table">
                    <thead>
                        <tr>
                            <th colspan="6">Volumes </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="2" rowspan="4">
                                <div class="cake"></div>
                            </td>
                            <th colspan="4"> FirstDisk</th>
                        </tr>
                        <tr>
                            <td>Total</td>
                            <td class="totPer"></td>
                            <td class="totDim"></td>
                            <td rowspan="3"><i class="icon-cog"></i></td>
                        </tr>
                        <tr>
                            <td>Free</td>
                            <td class="frePer"></td>
                            <td class="freDim"></td>
                        </tr>
                        <tr>
                            <td>Used</td>
                            <td class="usePer"></td>
                            <td class="useDim"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="span6">
                <table class="table">
                    <thead>
                        <tr>
                            <th colspan="6">Volumes </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="2" rowspan="4">
                                <div class="cake2"></div>
                            </td>
                            <th colspan="4"> SecondDisk</th>
                        </tr>
                        <tr>
                            <td>Total</td>
                            <td class="totPer"></td>
                            <td class="totDim"></td>
                            <td rowspan="3"><i class="icon-cog"></i></td>
                        </tr>
                        <tr>
                            <td>Free</td>
                            <td class="frePer"></td>
                            <td class="freDim"></td>
                        </tr>
                        <tr>
                            <td>Used</td>
                            <td class="usePer"></td>
                            <td class="useDim"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script type="text/javascript">
        $( ".cake" ).cake({
            data: {
                total: '100',
                used: '74'
            }
        });

        $(".cake2").cake({
            data: {
                total: '100',
                used: '23'
            }
        });

    </script>
}
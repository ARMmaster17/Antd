@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section PageBar {
    <style type="text/css">
        #System-TB {
            border-bottom: 10px solid #A7BD39;
            height: 80px !important;
        }
    </style>
    <nav class="navigation-bar bg-transparent page-bar menu-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>System: user manager</div>
            <div class="element-divider"></div>
            <a href="/system/general" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>general</a>
            <div class="element-divider"></div>
            <a href="/system/advanced" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>advanced</a>
            <div class="element-divider"></div>
            <a href="/system/certmanager" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>cert manager</a>
            <div class="element-divider"></div>
            <a href="/system/firmware" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>firmware</a>
            <div class="element-divider"></div>
            <a href="/system/routing" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>routing</a>
            <div class="element-divider"></div>
            <a href="/system/wizard" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>wizard</a>
            <div class="element-divider"></div>
        </nav>
    </nav>
}

@section MainContent {
    <div class="tab-control" data-role="tab-control">
        <ul class="tabs">
            <li class="active"><a href="#Users">Users</a></li>
            <li><a href="#Groups">Groups</a></li>
            <li><a href="#Settings">Settings</a></li>
            <li><a href="#Servers">Servers</a></li>
        </ul>

        <div class="frames" id="GroupsFrames">
            <div class="frame" id="Users">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>
                                <label>Username</label>
                            </th>
                            <th>
                                <label>Full name</label>
                            </th>
                            <th>
                                <label>Disabled</label>
                            </th>
                            <th>
                                <label>Groups</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <p class="button bg-anthilla-green">New User</p>
            </div>

            <div class="frame" id="Groups">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>
                                <label>Group name</label>
                            </th>
                            <th>
                                <label>Description</label>
                            </th>
                            <th>
                                <label>Member Count</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <p class="button bg-anthilla-green">New Group</p>
            </div>

            <div class="frame" id="Settings">
                <table class="table hovered">
                    <tbody>
                        <tr>
                            <td>
                                <label>Session Timeout</label></td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>
                                <label>Authentication Server</label></td>
                            <td>
                                <select>
                                    <option selected="selected">Local Database</option>
                                </select></td>
                        </tr>
                    </tbody>
                </table>
                <p class="button bg-anthilla-green">Save</p>
                <p class="button bg-anthilla-green">Save and test</p>
            </div>

            <div class="frame" id="Servers">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>
                                <label>Server Name</label>
                            </th>
                            <th>
                                <label>Type</label>
                            </th>
                            <th>
                                <label>Host Name</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <p class="button bg-anthilla-green">New</p>
            </div>
        </div>
    </div>
}

@section Scripts {

}
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section PageBar {
    <style type="text/css">
        #System-TB {
            border-bottom: 10px solid #A7BD39;
            height: 80px !important;
        }
    </style>
    <nav class="navigation-bar bg-transparent page-bar menu-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>System: general setup</div>
            <div class="element-divider"></div>
            <a href="/system/advanced" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>advanced</a>
            <div class="element-divider"></div>
            <a href="/system/certmanager" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>cert manager</a>
            <div class="element-divider"></div>
            <a href="/system/routing" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>routing</a>
            <div class="element-divider"></div>
            <a href="/system/usermanager" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>usermanager</a>
            <div class="element-divider"></div>
            <a href="/system/wizard" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;"><i class="icon-home on-left" style="line-height: 5px;"></i>wizard</a>
            <div class="element-divider"></div>
        </nav>
    </nav>
}

@section MainContent {
    <table class="table hovered">
        <thead>
            <tr>
                <th colspan="2">
                    <legend>System</legend>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <label>Hostname</label>
                </td>
                <td>
                    <p>Current hostname: @Model.Hostname</p>
                    <input id="NewHostname" type="text" />
                    <p id="UpdateHostname" class="button bg-anthilla-green" style="display: none;">Edit Hostname</p>
                    <p>
                        Name of the firewall host, without domain part
                        e.g. firewall
                    </p>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Domain</label>
                </td>
                <td>
                    <p>Current domainname: @Model.Domainname</p>
                    <input id="NewDomainname" type="text" />
                    <p id="UpdateDomainname" class="button bg-anthilla-green" style="display: none;">Edit Domainname</p>
                    <p>
                        Do not use 'local' as a domain name. It will cause local hosts running mDNS (avahi, bonjour, etc.) 
                        to be unable to resolve local hosts not running mDNS.
                        e.g. mycorp.com, home, office, private, etc.
                    </p>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Time zone</label>
                </td>
                <td>
                    <p>Current time zone: @Model.Timezone</p>
                    <select id="NewTimezone">
                        @foreach (string timezone in Model.TimezonesList) {
                            <option value="@timezone">@timezone</option>
                        }
                    </select>
                    <p id="UpdateTimezone" class="button bg-anthilla-green" style="display: none;">Edit Timezone</p>
                    <p>
                        Select the location closest to you
                    </p>
                </td>
            </tr>
            <tr>
                <td>
                    <label>NTP time server</label>
                </td>
                <td>
                    <p>Current time server: @Model.Timeserver</p>
                    <input id="NewTimeserver" type="text" />
                    <p id="UpdateTimeserver" class="button bg-anthilla-green" style="display: none;">Edit Timeserver</p>
                    <p>
                        Use a ',' to separate multiple hosts (only one is required). 
                        Remember to set up at least one DNS server if you enter a host name here! 
                    </p>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Web GUI Language</label>
                </td>
                <td>
                    <p>Current GUI Language: @Model.Language</p>
                    <select id="NewLanguage">
                        <option>English</option>
                        <option disabled>Italian</option>
                    </select>
                    <p id="UpdateLanguage" class="button bg-anthilla-green" style="display: none;">Edit Language</p>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <p id="SaveSystemGeneral" class="button wide-button bg-anthilla-green upcase" style="color: #3A3A3A !important;">Save all changes</p>
                </td>
            </tr>
        </tbody>
    </table>
}

@section Scripts {

}
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section MainContent {
    <input type="text" class="search-field" style="position: relative; margin-bottom: 15px; height: 30px; width: 100%; padding-left: 5px;" placeholder="Search">

    <table class="table searchable">
        <thead>
            <tr>
                <th class="text-left" style="width: 35%;">&nbsp</th>
                <th class="text-left" style="text-align: center;">Stock (filename)</th>
                <th class="text-left" style="text-align: center;">Running</th>
                <th class="text-left" style="text-align: center;">Antd (filename)</th>
            </tr>
        </thead>
        <tbody id="SysctlBodyTable">
            @foreach (Antd.ViewModels.StatusViewModel value in Model.ALL) {
                <tr>
                    <td style="text-align: right;">
                        <label>@value.label </label>
                    </td>
                    <td style="text-align: center;">@value.stockValue </td>
                    <td style="text-align: center;">@value.runningValue </td>
                    <td style="text-align: center;">@value.antdValue
                        <div class="border-3-anthilla-orange value-comparer" style="position: absolute; z-index: 99; height: 40px; width: 550px; margin-left: -600px; margin-top: -25px; background-color: transparent !important; display: none;"></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#SysctlBodyTable');
            table.find('tr').each(function (index) {
                var thisRow = $(this);
                var stockValue = thisRow.find('td').eq(1).text();
                var runningValue = thisRow.find('td').eq(2).text();
                var antdValue = thisRow.find('td').eq(3).text();
                var c = thisRow.find('.value-comparer');
                c.show();
                if (runningValue == stockValue) {
                    c.show();
                    c.css("margin-left", "-600px");
                    return false;
                }
                else if (runningValue == antdValue) {
                    c.show();
                    c.css("margin-left", "-250px");
                    return false;

                }
                else {
                    c.hide();
                    return false;
                }
            });
        });

        $('div.value-comparer').click(function () {
            jQuery.support.cors = true;
            var p = $(this).attr('data-param');
            var v = $('input[data-param="' + p + '"]').val();
            var s = {
                param: p,
                value: v,
            };
            $.ajax({
                url: '/status/sysctl/' + s.param + '/' + s.value,
                type: 'POST',
                data: JSON.stringify(s),
                contentType: "application/json;charset=utf-8",
                success: function () {
                    alert('new value for "' + s.param + '" is: ' + s.value);
                    location.reload(true);
                    return false;
                }
            });
        });

        $('.search-field').keyup(function () {
            var queryString = $(this).val();
            var table = $('.searchable');
            var tableBody = table.children('tbody');
            var row = tableBody.children('tr');
            row.each(function (index) {
                var thisRow = $(this);
                var queriedText = $(this).text();
                if (queriedText.indexOf(queryString) != -1) {
                    thisRow.show();
                }
                if (queriedText.indexOf(queryString) < 0) {
                    thisRow.hide();
                }
            });
        });
    </script>
}

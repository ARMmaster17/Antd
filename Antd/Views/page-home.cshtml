@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section MainContent {
    <table class="table searchable">
        <thead>
            <tr>
                <th class="text-left" colspan="2">System Information</th>
            </tr>
        </thead>
        <tbody id="SysctlBodyTable">
            <tr>
                <td style="text-align: center;">System hostname </td>
                <td style="text-align: center;">@Model.hostname </td>
            </tr>
            <tr>
                <td style="text-align: center;">Operating system </td>
                <td style="text-align: center;">@Model.os </td>
            </tr>
            <tr>
                <td style="text-align: center;">Time on system </td>
                <td style="text-align: center;">@Model.time </td>
            </tr>
            <tr>
                <td style="text-align: center;">Processor information </td>
                <td style="text-align: center;">@Model.procinfo </td>
            </tr>
            <tr>
                <td style="text-align: center;">System uptime </td>
                <td style="text-align: center;">@Model.uptime </td>
            </tr>
            <tr>
                <td style="text-align: center;">Running processes </td>
                <td style="text-align: center;">@Model.runprocs </td>
            </tr>
            <tr>
                <td style="text-align: center;">CPU load averages </td>
                <td style="text-align: center;">@Model.CPUload </td>
            </tr>
            <tr>
                <td style="text-align: center;">CPU usage </td>
                <td style="text-align: center;">@Model.CPUusage </td>
            </tr>
            <tr>
                <td style="text-align: center;">Real memory </td>
                <td style="text-align: center;">@Model.rmem </td>
            </tr>
            <tr>
                <td style="text-align: center;">Local disk space </td>
                <td style="text-align: center;">@Model.ldskspc </td>
            </tr>
        </tbody>
    </table>
}
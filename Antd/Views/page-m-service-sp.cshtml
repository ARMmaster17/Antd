@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Antd.CommandModel>
@{Layout = "_layout.cshtml";}

@section MainContent
{
    <div class="grid">
        <div class="row">
            <div class="span12">
                <legend style="display: inline-block;">AnthillaServer</legend>

                <a href="#" id="UnitSrv" class="tile bg-gray">
                    <div class="tile-content icon">
                        <i class="icon-icon-clipboard-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Set Unit</span>
                    </div>
                </a>

                <a href="#" id="StatusSrv" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-pause-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Status</span>
                    </div>
                </a>

                <a href="#" id="StartSrv" class="tile bg-anth-green">
                    <div class="tile-content icon">
                        <i class="icon-play-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Start</span>
                    </div>
                </a>

                <a href="#" id="StopSrv" class="tile bg-anth-orange">
                    <div class="tile-content icon">
                        <i class="icon-stop-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Stop</span>
                    </div>
                </a>

                <legend style="display: inline-block;">AnthillaSP</legend>

                <a href="#" id="UnitAsp" class="tile bg-gray">
                    <div class="tile-content icon">
                        <i class="icon-icon-clipboard-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Set Unit</span>
                    </div>
                </a>

                <a href="#" id="StatusAsp" class="tile bg-anth-blue">
                    <div class="tile-content icon">
                        <i class="icon-pause-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Status</span>
                    </div>
                </a>

                <a href="#" id="StartAsp" class="tile bg-anth-green">
                    <div class="tile-content icon">
                        <i class="icon-play-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Start</span>
                    </div>
                </a>

                <a href="#" id="StopAsp" class="tile bg-anth-orange">
                    <div class="tile-content icon">
                        <i class="icon-stop-2"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Stop</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $("#UnitSrv").click(function () {
            jQuery.support.cors = true;
            $.ajax({
                url: '/anthillasp/unit/set/anthillaserver/',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data) {
                    console.log('anthilla server unit created');
                }
            });
        });

        $("#StatusSrv").click(function () {
            jQuery.support.cors = true;
            $.ajax({
                url: '/anthillasp/unit/status/anthillaserver/',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data) {
                    console.log('anthilla server status');
                }
            });
        });

        $("#StartSrv").click(function () {
            jQuery.support.cors = true;
            $.ajax({
                url: '/anthillasp/unit/start/anthillaserver/',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data) {
                    console.log('anthilla server start');
                }
            });
        });

        $("#StopSrv").click(function () {
            jQuery.support.cors = true;
            $.ajax({
                url: '/anthillasp/unit/stop/anthillaserver/',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data) {
                    console.log('anthilla server stop');
                }
            });
        });

        $("#UnitAsp").click(function () {
            jQuery.support.cors = true;
            $.ajax({
                url: '/anthillasp/unit/set/anthillasp/',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data) {
                    console.log('anthilla sp unit created');
                }
            });
        });

        $("#StatusAsp").click(function () {
            jQuery.support.cors = true;
            $.ajax({
                url: '/anthillasp/unit/status/anthillasp/',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data) {
                    console.log('anthilla sp status');
                }
            });
        });

        $("#StartAsp").click(function () {
            jQuery.support.cors = true;
            $.ajax({
                url: '/anthillasp/unit/start/anthillasp/',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data) {
                    console.log('anthilla sp start');
                }
            });
        });

        $("#StopAsp").click(function () {
            jQuery.support.cors = true;
            $.ajax({
                url: '/anthillasp/unit/stop/anthillasp/',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data) {
                    console.log('anthilla sp stop');
                }
            });
        });
    </script>

@if (Model != null) {
    @if (Model.outputTable != null) {
        <table id="Output" class="table striped">
            <tbody>
                @foreach (string str in Model.outputTable) {
                    <tr>
                        <td class="right">@str</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <br />
    @if (Model.errorTable != null) {
        <table id="Error" class="table striped">
            <tbody>
                @foreach (string str in Model.errorTable) {
                    <tr>
                        <td class="right">@str</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    }